<?xml version="1.0" encoding="utf-8" ?>
<Application
    x:Class="PublicacionesApp.App"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:conv="clr-namespace:PublicacionesApp.Converters">

    <Application.Resources>
        <ResourceDictionary>

            <!-- Merged dictionaries -->
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- Conversores -->
            <conv:InverseBoolConverter x:Key="InverseBoolConverter" />
            <conv:StringNotNullOrEmptyConverter x:Key="StringNotNullOrEmptyConverter" />
            <conv:NotNullToBoolConverter x:Key="NotNullToBoolConverter" />

        </ResourceDictionary>
    </Application.Resources>
</Application>
